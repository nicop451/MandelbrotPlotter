{
   "version": "2.0.0",
   "tasks": [
      {
         "label": "Build OpenGL Project",
         "type": "shell",
         "command": "g++",
         "args": [
            "-g",
            "--std=c++17",
            "-I/C/OpenGL_BP/include/glad",  // Update this line
            "-I/C/OpenGL_BP/include/GLFW",
            "-LC:/OpenGL_BP/lib",
            "C:/OpenGL_BP/src/*.cpp",
            "C/OpenGL_BP/src/glad.c",
            "-lglfw3dll",
            "-o",
            "C/OpenGL_BP/main"
         ],
         "group": "build",
         "presentation": {
            "reveal": "always",
            "panel": "new"
         },
         "problemMatcher": "$gcc"
      },
      {
         "type": "cppbuild",
         "label": "C/C++: g++.exe build active file",
         "command": "C:/msys64/mingw64/bin/g++.exe",
         "args": [
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}.exe"
         ],
         "options": {
            "cwd": "C:/OpenGL_BP/"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "detail": "Task generated by Debugger."
      }
   ]
}